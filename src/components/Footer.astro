---
const today = new Date();
import { Icon } from 'astro-icon/components';
import { AUTHOR_NAME, WATTPAD_URL } from '../consts';
---

<footer class="bg-foreground text-background py-12 mt-16">
  <div class="container text-center">
    <p class="text-lg mb-2">
      © {today.getFullYear()}
      {AUTHOR_NAME}. Todos los derechos reservados.
    </p>
    <p class="text-muted mb-4">Hecho con ❤️ para tí</p>
    <div class="flex justify-center gap-6">
      <a
        href={WATTPAD_URL}
        target="_blank"
        class="text-background hover:text-primary transition-colors"
        title="Wattpad"
      >
        <span class="sr-only">Wattpad</span>
        <Icon class="text-3xl text-background" name="simple-icons:wattpad" />
      </a>
    </div>
  </div>
</footer>
