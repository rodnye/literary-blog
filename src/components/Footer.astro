---
const today = new Date();
import { AUTHOR_NAME, WATTPAD_URL } from '../consts';
---

<footer class="bg-foreground text-background py-12 mt-16">
  <div class="container text-center">
    <p class="text-lg mb-2">
      © {today.getFullYear()}
      {AUTHOR_NAME}. Todos los derechos reservados.
    </p>
    <p class="text-muted mb-4">Hecho con ❤️ para tí</p>
    <div class="flex justify-center gap-6">
      <a
        href={WATTPAD_URL}
        target="_blank"
        class="text-background hover:text-primary transition-colors"
        title="Wattpad"
      >
        <span class="sr-only">Wattpad</span>
        <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M13.48 2.1C9.4 2.1 6.1 5.4 6.1 9.5c0 1.8.6 3.5 1.6 4.9.3.4.3.9 0 1.3l-1.4 2.1c-.3.5.1 1.1.7 1.1h12.2c.6 0 1-.6.7-1.1l-1.4-2.1c-.3-.4-.3-1 0-1.4 1-1.4 1.6-3.1 1.6-4.9 0-4-3.3-7.3-7.4-7.3z"
          ></path>
        </svg>
      </a>
    </div>
  </div>
</footer>
